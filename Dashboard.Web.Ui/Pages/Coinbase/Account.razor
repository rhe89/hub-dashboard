@using Dashboard.Dto.Coinbase
@using Dashboard.Web.Ui.Extension

@if (AccountDto == null)
{
    return;
}   

<Card>
    <CardContent>
        <Typography
            Variant="@TypographyVariant.H5"
            Component="h5">
            @AccountDto.Name <BalanceChangeIcon 
                                 CurrentValue="@AccountDto.Balance"
                                 PreviousValue="@AccountDto.LastMonthBalance"/>
        </Typography>
        <Typography
            Variant="@TypographyVariant.H4"
            Component="h4">
            @AccountDto.Balance.ToCurrency()
        </Typography>
        <Typography
            Variant="@TypographyVariant.Body1"
            Component="p">
            Måned: @((AccountDto.Balance - AccountDto.LastMonthBalance).ToCurrency())
        </Typography>
        <Typography
            Variant="@TypographyVariant.Body1"
            Component="p">
            I år: @((AccountDto.Balance - AccountDto.LastYearBalance).ToCurrency())
        </Typography>

    </CardContent>
</Card>

@code
{
    [Parameter]
    public AccountDto AccountDto { set; get; }
}