@using Dashboard.Integration.Dto.Sbanken

<Button
    Style="margin-top: 20px;"
    Variant="@ButtonVariant.Contained"
    Color="@Color.Secondary"
    OnClick="@OnOpen">
    @Text
</Button>
<Dialog
        Open="@Open"
        OnClose="@OnClose"
        aria-labelledby="customized-dialog-title">
        <DialogTitle
            Style="margin: 0; padding: 16px;"
            DisableTypography
            Id="customized-dialog-title">
            <Typography
                Variant="@TypographyVariant.H6">
                Transaksjoner siste 30 dager
            </Typography>
            <IconButton
                aria-label="close"
                Style="top: 8px; color: #9e9e9e; right: 8px; position: absolute;"
                OnClick="@OnClose">
                <CloseIcon />
            </IconButton>
        </DialogTitle>
        <DialogContent
            Style="padding: 16px;"
            Dividers>
            <Table>
                <TableHead>
                    <TableRow>
                        <TableCell>Navn</TableCell>
                        <TableCell>Bel√∏p</TableCell>
                        <TableCell Sort="@Sort.Descending">
                            <TableSortLabel
                                Active
                                Direction="@Sort.Descending">
                                Date
                            </TableSortLabel>
                        </TableCell>
                    </TableRow>
                </TableHead>
                <TableBody>
                    @foreach (var transaction in Transactions)
                    {
                        <TableRow
                            Hover
                            @key="@IncreaseRowId()">
                            <TableCell>@transaction.Name</TableCell>
                            <TableCell>@transaction.Amount</TableCell>
                            <TableCell>
                                @transaction.CreatedDate.ToString("dd.MM.yyyy")
                            </TableCell>
                        </TableRow>
                    }
                </TableBody>
            </Table>
        </DialogContent>
</Dialog>

@code {

    [Parameter] public IList<SbankenTransactionDto> Transactions { get; set; }

    private int _rowId;
    
    private bool Open { set; get; }

    private string Text => (Open ? "Skjul" : "Vis") + " transaksjoner";

    private int IncreaseRowId()
    {
        return _rowId++;
    }
    
    private void OnClose()
    {
        Open = false;

        StateHasChanged();
    }

    private void OnOpen()
    {
        Open = true;

        StateHasChanged();
    }
}
